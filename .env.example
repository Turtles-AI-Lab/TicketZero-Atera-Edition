# TicketZero AI MSP Edition - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Primary AI Provider (choose one or configure multiple)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-35-turbo

# Alternative AI Provider
OPENAI_API_KEY=your_openai_api_key_here

# MSP Client API Keys (add as many as needed)
ATERA_API_KEY_CLIENT_001=your_client_1_atera_api_key
ATERA_API_KEY_CLIENT_002=your_client_2_atera_api_key
ATERA_API_KEY_CLIENT_003=your_client_3_atera_api_key

# Database Configuration (optional - for advanced deployments)
MONGODB_URI=mongodb+srv://cluster.mongodb.net/ticketZero
REDIS_URL=redis://localhost:6379

# Monitoring & Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=alerts@yourmsp.com
EMAIL_SMTP_PASSWORD=your_email_password

# Security
JWT_SECRET=your-jwt-secret-key-here
WEBHOOK_SECRET=your-webhook-secret-here

# Performance Settings
MAX_CONCURRENT_TICKETS=50
DEFAULT_AI_TIMEOUT=5
CACHE_DURATION_MINUTES=5

# Feature Flags
ENABLE_DASHBOARD=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_COST_TRACKING=true
ENABLE_SLA_MONITORING=true